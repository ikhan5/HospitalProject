@model IEnumerable<HospitalProject.Models.ReferAPatient>

@{
    ViewData["Title"] = "Index";
}

<h2>Patient Referral</h2>

<p>
    <a asp-action="Create">Add</a>
</p>

<div class="pagination">
    @ViewData["PaginationSummary"]
    @Html.ActionLink("Prev",
        "Index",
        "ReferAPatient",
        new { pagenum= ((int)ViewData["pagenum"]-1)}
        )
    |
    @Html.ActionLink("Next",
        "Index",
        "ReferAPatient",
        new { pagenum = ((int)ViewData["pagenum"] + 1) }
        )
</div>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReferalDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgReq)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceReq)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReferFac)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReferalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferFac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgReq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceReq)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ReferAPatientID"> More Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReferAPatientID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
