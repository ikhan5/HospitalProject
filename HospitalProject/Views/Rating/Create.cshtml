@model HospitalProject.Models.ViewModels.DoctorsList

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="DoctorID" class="control-label">Doctor Name:</label>
                <select name="DoctorID" id="DoctorID" class="form-control">
                    @foreach (var doctors in Model.doctors)
                    {
                        <option value="@doctors.DoctorID">@doctors.DoctorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.rating.Feedback" class="control-label"></label>
                <input name="Feedback" asp-for="@Model.rating.Feedback" class="form-control" />
                <span asp-validation-for="@Model.rating.Feedback" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
