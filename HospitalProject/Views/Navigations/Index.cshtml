@model IEnumerable<HospitalProject.Models.Navigation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.navigationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.navigationURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.navigationPosition)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.navigationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.navigationURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.navigationPosition)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.navigationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.navigationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.navigationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
