@model HospitalProject.Models.Navigation

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Navigation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="navigationID" />
            <div class="form-group">
                <label asp-for="navigationName" class="control-label"></label>
                <input asp-for="navigationName" class="form-control" />
                <span asp-validation-for="navigationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="navigationURL" class="control-label"></label>
                <input asp-for="navigationURL" class="form-control" />
                <span asp-validation-for="navigationURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="navigationPosition" class="control-label"></label>
                <input asp-for="navigationPosition" class="form-control" />
                <span asp-validation-for="navigationPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
