@model HospitalProject.Models.ViewModels.AppointmentList

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="client_id" type="hidden" asp-for="@Model.appointment.client_id" />
            <div class="form-group">
                <label asp-for="@Model.appointment.client_fname" class="control-label"></label>
                <input name="client_fname" asp-for="@Model.appointment.client_fname" class="form-control" />
                <span asp-validation-for="@Model.appointment.client_fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.appointment.client_lname" class="control-label"></label>
                <input name="client_lname" asp-for="@Model.appointment.client_lname" class="form-control" />
                <span asp-validation-for="@Model.appointment.client_lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.appointment.client_phone" class="control-label"></label>
                <input name="client_phone" asp-for="@Model.appointment.client_phone" class="form-control" />
                <span asp-validation-for="@Model.appointment.client_phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.appointment.client_emailadd" class="control-label"></label>
                <input name="client_emailadd" asp-for="@Model.appointment.client_emailadd" class="form-control" />
                <span asp-validation-for="@Model.appointment.client_emailadd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.appointment.DoctorID" class="control-label">Regular Dr</label>
                <select name="DoctorID" asp-for="@Model.appointment.DoctorID" class="form-control" asp-items="ViewBag.DoctorID">
                    @foreach (var doctor in Model.doctors)
                    {
                        if (@Model.appointment.client_id == @doctor.DoctorID)
                        {
                            <option selected="selected" value="@doctor.DoctorID">@doctor.DoctorName</option>
                        }
                        else
                        {
                            <option value="@doctor.DoctorID">@doctor.DoctorName</option>
                        }

                    }
                </select>
                <span asp-validation-for="@Model.appointment.DoctorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.appointment.date_time" class="control-label"></label>
                <input name="date_time" asp-for="@Model.appointment.date_time" class="form-control" />
                <span asp-validation-for="@Model.appointment.date_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.appointment.appointment_details" class="control-label"></label>
                <input name="appointment_details" asp-for="@Model.appointment.appointment_details" class="form-control" />
                <span asp-validation-for="@Model.appointment.appointment_details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

