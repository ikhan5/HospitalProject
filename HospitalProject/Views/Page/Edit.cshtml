@model HospitalProject.Models.MVPModels.ViewModels.NavigationListing

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="pageID" type="hidden" asp-for="@Model.page.pageID" />
            <div class="form-group">
                <label asp-for="@Model.page.pageAuthor" class="control-label"></label>
                <input name="pageAuthor" asp-for="@Model.page.pageAuthor" class="form-control" />
                <span asp-validation-for="@Model.page.pageAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.page.pageTitle" class="control-label"></label>
                <input name="pageTitle" asp-for="@Model.page.pageTitle" class="form-control" />
                <span asp-validation-for="@Model.page.pageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.page.pageContent" class="control-label"></label>
                <input name="pageContent" asp-for="@Model.page.pageContent" class="form-control" />
                <span asp-validation-for="@Model.page.pageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.page.dateCreated" class="control-label"></label>
                <input name="dateCreated" asp-for="@Model.page.dateCreated" class="form-control" />
                <span asp-validation-for="@Model.page.dateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.page.lastModified" class="control-label"></label>
                <input name="lastModified" asp-for="@Model.page.lastModified" class="form-control" />
                <span asp-validation-for="@Model.page.lastModified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.page.pageOrder" class="control-label"></label>
                <input name="pageOrder" asp-for="@Model.page.pageOrder" class="form-control" />
                <span asp-validation-for="@Model.page.pageOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="navigationID" class="control-label"></label>
                <select name="navigationID" class="form-control">
                    @foreach (var navigationName in Model.navigations)
                    {
                        if (@Model.page.navigationID == navigationName.navigationID)
                        {
                            <option selected="selected" value="@navigationName.navigationID">@navigationName.navigationName</option>
                        }
                        else
                        {
                            <option value="@navigationName.navigationID">@navigationName.navigationName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
