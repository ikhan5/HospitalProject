@model HospitalProject.Models.GiftShop.ViewModel.CartList

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.item.ItemID" />
            <div class="form-group">
                <label asp-for="@Model.item.Name" class="control-label"></label>
                <input asp-for="@Model.item.Name" class="form-control" />
                <span asp-validation-for="@Model.item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.item.ItemDescp" class="control-label"></label>
                <input asp-for="@Model.item.ItemDescp" class="form-control" />
                <span asp-validation-for="@Model.item.ItemDescp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.item.price" class="control-label"></label>
                <input asp-for="@Model.item.price" class="form-control" />
                <span asp-validation-for="@Model.item.price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.item.quantity" class="control-label"></label>
                <input asp-for="@Model.item.quantity" class="form-control" />
                <span asp-validation-for="@Model.item.quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.item.CartID" class="control-label"></label>
                <select name="CartID" asp-for="@Model.item.CartID" class="form-control" asp-items="ViewBag.CartID">
                    @foreach (var item in Model.carts)
                    {
                        if (@Model.item.CartID == @item.CartID)
                        {
                            <option selected="selected" value="@item.CartID">@item.CartID</option>
                        }
                        else
                        {
                            <option value="@item.CartID">@item.CartID</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.item.CartID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
